<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/open_inventory_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Abrir estoque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_sell_product_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Vender Produto"
        app:layout_constraintEnd_toEndOf="@+id/open_inventory_btn"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/open_inventory_btn"
        app:layout_constraintTop_toBottomOf="@+id/open_inventory_btn" />

    <Button
        android:id="@+id/open_logs_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ver Logs"
        app:layout_constraintEnd_toEndOf="@+id/open_inventory_btn"
        app:layout_constraintStart_toStartOf="@+id/open_inventory_btn"
        app:layout_constraintTop_toBottomOf="@+id/open_sell_product_btn" />

    <Button
        android:id="@+id/open_stats_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ver EstatÃ­sticas"
        app:layout_constraintEnd_toEndOf="@+id/open_inventory_btn"
        app:layout_constraintStart_toStartOf="@+id/open_inventory_btn"
        app:layout_constraintTop_toBottomOf="@+id/open_logs_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>